<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatCheckBox
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/viewConjugations"
            android:id="@+id/verbTextView"
            android:paddingEnd="2dp"
            android:paddingStart="2dp"
            android:layout_marginStart="4dp"
            android:layout_width="0dp"
            style="@style/verb_tile"
            android:layout_height="match_parent"/>

        <androidx.appcompat.widget.AppCompatImageButton
            app:layout_constraintEnd_toStartOf="@id/practiceVerb"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1"
            android:id="@+id/viewConjugations"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:tint="@color/black"
            android:src="@drawable/ic_view_conjugations_24"/>

        <androidx.appcompat.widget.AppCompatImageButton
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1"
            android:id="@+id/practiceVerb"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:tint="@color/black"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_outline_practice_24"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/definition"
        style="@style/definition_tile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="2dp"
        android:paddingStart="2dp"
        android:layout_marginStart="50dp"/>

    <View
        android:id="@+id/divider"
        android:padding="0dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:background="@color/lightGray" />

</LinearLayout>