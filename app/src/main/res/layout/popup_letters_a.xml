<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popup_letters"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/acuteA"
        style="@style/BigText"
        android:padding="0dp"
        android:text="Á"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/circumflexA"
        app:layout_constraintHorizontal_weight=".5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>
    <Button
        android:id="@+id/circumflexA"
        style="@style/BigText"
        android:padding="0dp"
        android:text="Â"
        app:layout_constraintStart_toEndOf="@id/acuteA"
        app:layout_constraintEnd_toStartOf="@id/graveA"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_weight=".5"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>
    <Button
        android:id="@+id/graveA"
        style="@style/BigText"
        android:padding="0dp"
        android:text="À"
        app:layout_constraintStart_toEndOf="@id/circumflexA"
        app:layout_constraintEnd_toStartOf="@id/tildeA"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_weight=".5"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>
    <Button
        android:id="@+id/tildeA"
        style="@style/BigText"
        android:padding="0dp"
        android:text="Ã"
        app:layout_constraintStart_toEndOf="@id/graveA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_weight=".5"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>