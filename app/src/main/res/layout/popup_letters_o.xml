<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popup_letters"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/acuteO"
        style="@style/BigText"
        android:padding="0dp"
        android:text="Ó"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/circumflexO"
        app:layout_constraintHorizontal_weight=".5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>
    <Button
        android:id="@+id/circumflexO"
        style="@style/BigText"
        android:padding="0dp"
        android:text="Ô"
        app:layout_constraintStart_toEndOf="@id/acuteO"
        app:layout_constraintEnd_toStartOf="@id/graveO"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_weight=".5"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>
    <Button
        android:id="@+id/graveO"
        style="@style/BigText"
        android:padding="0dp"
        android:text="Ò"
        app:layout_constraintStart_toEndOf="@id/circumflexO"
        app:layout_constraintEnd_toStartOf="@id/tildeO"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_weight=".5"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>
    <Button
        android:id="@+id/tildeO"
        style="@style/BigText"
        android:padding="0dp"
        android:text="Õ"
        app:layout_constraintStart_toEndOf="@id/graveO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_weight=".5"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>